{
  "name": "rita-chat",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:api": "cd packages/api-server && npm run dev",
    "dev:client": "cd packages/client && npm run dev",
    "dev:mock": "cd packages/mock-service && npm run dev",
    "dev:theme": "cd keycloak && npm run dev",
    "dev:iframe-app": "cd packages/iframe-app && npm run dev",
    "migrate": "cd packages/api-server && npm run migrate",
    "test:auth": "cd packages/api-server && npm run test:auth",
    "test": "cd packages/client && npm run test:unit:run",
    "build": "cd packages/api-server && npm run build && cd ../client && npm run build",
    "build:demo": "cd packages/client && npm run build:gh-pages",
    "deploy:demo": "npm run build:demo && npx gh-pages -d packages/client/dist",
    "build:theme": "cd keycloak && npm run build",
    "lint": "cd packages/api-server && npm run lint && cd ../client && npm run lint",
    "type-check": "cd packages/api-server && npm run type-check && cd ../client && npm run type-check && cd ../mock-service && npm run type-check",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "dotenv-cli": "7.4.2",
    "husky": "9.1.7",
    "lint-staged": "16.2.3"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,jsx,tsx,json,jsonc}": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  }
}
