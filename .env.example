# App
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://rita:rita@localhost:5432/rita

# External Service
AUTOMATION_WEBHOOK_URL=https://external-service.com/webhook
AUTOMATION_AUTH=your-secret-token

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672
QUEUE_NAME=rita_responses

# SMTP Configuration (Mailpit for development)
# Defaults to 'localhost' if not set (for local development)
# Set to 'mailpit' when running mock-service in Docker
# SMTP_HOST=localhost
# SMTP_PORT=1025
# SMTP_FROM=noreply@rita.local
# SMTP_FROM_NAME=Rita Platform
# SMTP_SECURE=false
# SMTP_AUTH=false

# RabbitMQ Connection Resilience (optional - defaults provided)
# Maximum reconnection attempts (0 = infinite retries)
RABBITMQ_RETRY_MAX_ATTEMPTS=10
# Initial backoff delay in milliseconds
RABBITMQ_RETRY_INITIAL_DELAY_MS=1000
# Maximum backoff delay in milliseconds
RABBITMQ_RETRY_MAX_DELAY_MS=32000
# Backoff multiplier (exponential growth factor)
RABBITMQ_RETRY_BACKOFF_MULTIPLIER=2
# Add jitter to prevent thundering herd (true/false)
RABBITMQ_RETRY_JITTER_ENABLED=true

# Keycloak
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=rita-chat-realm
KEYCLOAK_CLIENT_ID=rita-chat-client
# Optional: Override JWT issuer validation (for local Docker setups)
# KEYCLOAK_ISSUER=http://localhost:8080/realms/rita-chat-realm

# Client Environment (VITE_ prefixed)
VITE_API_URL=http://localhost:3000
VITE_KEYCLOAK_URL=http://localhost:8080
VITE_KEYCLOAK_REALM=rita-chat-realm
VITE_KEYCLOAK_CLIENT_ID=rita-chat-client

# Consul
CONSUL_HTTP_ADDR=http://consul:8500